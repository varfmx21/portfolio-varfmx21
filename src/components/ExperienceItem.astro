---
export interface Props {
  title: string;
  date: string;
  description: string;
  isLatest?: boolean;
  link?: string;
}

const { title, date, description, isLatest, link } = Astro.props;
---

<span class="absolute flex items-center justify-center w-6 h-6 bg-purple-100 dark:bg-purple-900 rounded-full -start-3 ring-8 ring-neutral-950">
</span>
<time class="rounded-full border border-white/10 bg-white/5 text-white text-xs font-medium px-2.5 py-1 inline-block">
    {date}
</time>
<h3 class="flex items-center mb-1 text-lg font-semibold text-yellow-200/90 my-2">
    {title} 
    {isLatest && <span class="ms-2 rounded-full border border-purple-300/30 bg-purple-500/20 text-purple-200 text-xs font-medium px-2.5 py-1">Latest</span>}
</h3>
<p class="mb-4 text-gray-300">
    {description}
</p>
{link && (
    <a 
        href={link} 
        class="inline-flex rounded-full border border-white/10 justify-center items-center gap-x-2 py-2 px-4 bg-white/5 hover:scale-110 hover:bg-white/10 transition text-gray-300 font-medium text-sm"
        target="_blank" 
        rel="noopener noreferrer"
    >
        Learn more...
    </a>
)}