---
interface Props {
  color?: 'cyan' | 'green' | 'purple' | 'yellow';
}

const { color = 'cyan' } = Astro.props;

const colorClasses = {
  cyan: 'border-cyan-500/30 bg-cyan-500/10 hover:bg-cyan-500/20 hover:border-cyan-400/50',
  green: 'border-green-500/30 bg-green-500/10 hover:bg-green-500/20 hover:border-green-400/50',
  purple: 'border-purple-500/30 bg-purple-500/10 hover:bg-purple-500/20 hover:border-purple-400/50',
  yellow: 'border-yellow-500/30 bg-yellow-500/10 hover:bg-yellow-500/20 hover:border-yellow-400/50'
};
---

<span 
  class={`
    inline-flex
    rounded-full 
    border 
    ${colorClasses[color]}
    justify-center 
    items-center 
    gap-x-2 
    py-2 px-3
    md:py-3 md:px-5
    text-sm md:text-base
    font-medium
    hover:scale-105
    transition-all
    duration-300
    cursor-default
  `}
>
  <slot />
</span>